# MediLytica Backend Environment Configuration
# Copy this file to .env and update values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# File Upload
MAX_UPLOAD_SIZE_MB=25
MAX_PREVIEW_ROWS=200

# Session Storage
SESSION_CLEANUP_DAYS=7

# Database (if using PostgreSQL instead of file-based storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/medilytica

# Optional: Logging
LOG_LEVEL=INFO
